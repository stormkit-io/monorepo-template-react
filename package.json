{
  "name": "monorepo-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 nodemon --watch './**/*.ts' --exec 'node --loader ts-node/esm' src/vite-server.ts",
    "build": "npm run build:spa && npm run build:ssr && npm run build:ssg && npm run build:api",
    "build:spa": "tsc && vite build",
    "build:ssg": "tsc && SSG=true node --loader ts-node/esm ./src/vite-server.ts",
    "build:ssr": "tsc && vite build -c vite.config.ssr.ts",
    "build:api": "rm -rf .stormkit/api && node --loader ts-node/esm vite.config.api.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@stormkit/serverless": "^0.17.4",
    "@types/express": "^4.17.15",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "express": "^4.18.2",
    "glob": "^8.0.3",
    "nodemon": "^2.0.20",
    "react-router": "^6.6.2",
    "react-router-dom": "^6.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-static-copy": "^0.13.0"
  }
}
